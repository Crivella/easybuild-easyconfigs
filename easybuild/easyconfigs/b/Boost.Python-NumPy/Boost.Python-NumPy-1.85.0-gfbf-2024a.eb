checksums = ['79e6d3f986444e5a80afbeccdaf2d1c1cf964baa8d766d20859d653a16c39848']

dependencies = [
    ('Boost',  version),
    ('Python', '3.12.3'),
    ('SciPy-bundle', '2024.05'),
]

only_python_bindings = True

moduleclass = 'lib'
