easyblock = "Tarball"

name = 'itkSNAP'
version = '3.8.0'
versionsuffix = '-20190612'

homepage = 'http://www.well.ox.ac.uk/~cfreeman/software/gwas/gtool.html'
description = """ ITK-SNAP is a software application used to segment structures in 3D medical images. """

toolchain = SYSTEM

# Download software from this location: http://www.itksnap.org/download/snap/register.php?link=9997&root=nitrc
sources = ['%(namelower)s-%(version)s%(versionsuffix)s-Linux-x86_64.tar.gz']

#modextrapaths = {'PATH': ''}

sanity_check_paths = {
    'files': ["bin/itksnap", "bin/itksnap-wt"],
    'dirs': ["bin", "lib"]
}

moduleclass = 'bio'
